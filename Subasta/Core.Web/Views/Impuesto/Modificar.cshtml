@model Core.Info.General.Impuesto_Info
@{
    ViewBag.Title = "Modificar impuesto";
    if (string.IsNullOrEmpty(Core.Erp.Web.Helps.SessionFixed.IdUsuario))
    {
        Response.Redirect("~/Account/Login");
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/ValidacionBotonSubmit.js"></script>
@using (Html.BeginForm("Modificar", "Impuesto", FormMethod.Post, new { @class = "form", @role = "form" }))
{
    @Html.HiddenFor(q => q.IdImpuesto)
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-9">
                <div class="form-group">
                    <label for="ca_Codigo">Impuesto*</label>
                    @Html.TextBoxFor(q => q.im_Descripcion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.im_Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="pv_CedulaRuc">Porcentaje*</label>
                    @Html.TextBoxFor(q => q.im_Porcentaje, new { @class = "form-control", @id = "im_Porcentaje" })
                    @Html.ValidationMessageFor(q => q.im_Porcentaje, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-default" href="@Url.Action("Index","Impuesto",null)">Cancelar</a>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}
